<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entities.Match" table="Matches" >
        <id name="id" type="int">
            <column name="id" />
            <generator class="increment" />
        </id>

        <property name="stage" type="int">
            <column name="stage" />
        </property>

        <many-to-one name="p1" class="entities.User">
            <column name="player1_id" not-null="true"></column>
        </many-to-one>

        <many-to-one name="p2" class="entities.User">
            <column name="player2_id" not-null="true"></column>
        </many-to-one>

        <many-to-one name="tournament" class="entities.Tournament">
            <column name="tournament_id" not-null="true"></column>
        </many-to-one>

        <set name="games" table="Games" fetch="select">
            <key>
                <column name="match_id" not-null="true"></column>
            </key>
            <one-to-many class="entities.Game"/>
        </set>
    </class>

</hibernate-mapping>