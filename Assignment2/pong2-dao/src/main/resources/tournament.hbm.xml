<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entities.Tournament" table="Tournaments" >
        <id name="id" type="int">
            <column name="id" />
            <!-- <generator class=" identity " /> -->
            <generator class="increment"/ >
        </id>

        <property name="name" type="java.lang.String">
            <column name="name" />
        </property>

        <property name="fee" type="float">
            <column name="fee" />
        </property>

        <property name="status" type="int">
            <column name="status" />
        </property>

        <property name="startDate" type="java.sql.Date">
            <column name="start_date" />
        </property>

        <set name="matches" table="Matches" fetch="select">
            <key>
                <column name="tournament_id" not-null="true" />
            </key>
            <one-to-many class="entities.Match"/>
        </set>

        <set name="users" table="UserTournament" fetch="select" cascade="all">
            <key column="id_tournament" />
            <many-to-many class="entities.User" column="id_user" />
        </set>
    </class>

</hibernate-mapping>